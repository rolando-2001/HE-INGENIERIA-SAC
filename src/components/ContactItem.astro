---
interface Props {
  icon: string;
  title: string;
  value?: string;
  
}

const { icon, title, value } = Astro.props as Props;

---
<div class="flex items-center text-start space-x-4 p-6 bg-[#1D2D50] rounded-lg">
  <div class="bg-blue-600 p-3 rounded-lg">
    <i data-lucide={icon} class="w-6 h-6 text-white transition-transform duration-300 ease-out hover:scale-110" />
  </div>
  <div>
    <h3>{title}</h3>
    <p>{value}</p>
  </div>
</div>
